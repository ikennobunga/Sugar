<mjml>
  <mj-head>
    <mj-title></mj-title>
    <mj-font name="Quantico" href="https://fonts.googleapis.com/css2?family=Quantico&display=swap"/>
    <mj-font name="Great Vibes" href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap"/>
    <mj-attributes>
      <mj-text font-family="Quantico, sans-serif" line-height="22px" color="#151e23" />
      <mj-class name="heading" font-family="Great Vibes" font-size="48px" line-height="40px" padding="30px" text-transform="capitalize" align="center"/>
      <mj-button color="#fff" background-color="#354552" font-family="Quantico, sans-serif" font-size="14px" border-radius="3px" inner-padding="10px 25px" vertical-align="middle"/>
      <mj-image padding="0" />
      <mj-section padding="0" background-color="#fff"/>
    </mj-attributes>

    <mj-style>
      @media (max-width: 480px) {
        .bakedCheese {
          padding: 10px 20% !important;
        }
        .wine-and-dine-text {
          font-size: 30px;
          padding-right: 0;
        }
      }
    </mj-style>
  </mj-head>

  <mj-body background-color="#F4F4F4">
  <!-- Header -->
    <mj-section>
      <mj-column>
        <mj-image src="https://i.ibb.co/1vNT8VR/Sugar2.png" alt="logo" width="200px" padding="30px 40px 0"/>
        <mj-text>
          <p style="text-align: center">Product | Concept | Contact</p>
        </mj-text>
      </mj-column>
    </mj-section>
    <!-- Hero Image -->
    <mj-section>
      <mj-column>
        <mj-image src="https://i.ibb.co/wJLPhbD/Spice1.png" alt="Spices" />
      </mj-column>
    </mj-section>
    <!-- Heading -->
    <mj-section>
      <mj-column>
        <mj-text mj-class="heading">
          <p> - Our Holidy Recipies - </p>
        </mj-text>
      </mj-column>
    </mj-section>
    <!-- Gallery -->
    <mj-section padding-top="20px">
      <mj-column>
        <mj-image src="https://i.ibb.co/0cvm36N/baked-cheese-cheesy-37078.jpg" alt="Baked Chees" padding="0 30px" height="250px"/>
      </mj-column>
