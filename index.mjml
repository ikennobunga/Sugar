    <!-- Button -->
    <mj-section padding="30px">
      <mj-column>
        <mj-button>
          Discover assorted Wines
        </mj-button>
      </mj-column>
    </mj-section>
    <!-- Wine and Dine -->
    <mj-hero padding-top="30px" background-url="https://i.ibb.co/85cTjsQ/quentin-dr-178096-unsplash.jpg" height="300px">
      <mj-text color="#fff" padding-top="40px" font-size="40px" text-transform="capitalize" line-height="46px" font-family="Great Vibes">
        <p class="wine-and-dine-text">wine and dine <br> with our <br> finest aged wine.</p>
      </mj-text>
    </mj-hero>
    <!-- Footer -->
    <mj-section padding-top="50px">
      <mj-column>
        <mj-image src="https://i.ibb.co/1vNT8VR/Sugar2.png" alt="Logo" width="110px" padding="0 40px"/>
      </mj-column>
    </mj-section>
    <mj-section>
      <mj-column>
        <mj-social align="center" padding-bottom="80px">
          <mj-social-element name="facebook"></mj-social-element>
          <mj-social-element name="twitter"></mj-social-element>
          <mj-social-element name="pinterest"></mj-social-element>
        </mj-social>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>